/*
  qBittorrent Dracula Theme
  https://github.com/mahdimirzade/qbittorrent
*/

QWidget {
  background: #282A36;
  color: #BFBFBF;
  border: none;
}

/*
  QMenuBar
*/

QMenuBar {
  background: #282A36;
}

QMenuBar::item {
  padding: 5px 10px;
  width: 100%;
  color: #BFBFBF;
}

QMenuBar::item:selected {
  background: #282A36;
  color: #6272A4;
}

QMenuBar::item:pressed {
  background: #282A36;
  color: #6272A4;
}

/*
  QMenu
*/

QMenu {
  background: #282A36;
  border: 1px solid #222;
  left: 50px;
}

QMenu::item {
  margin: 0;
  padding: 5px 10px 5px 5px;
  background: #282A36;
  color: #BFBFBF;
}

QMenu::item:selected {
  background: #282A36;
  color: #6272A4;
}

QMenu::separator {
  background: #6272A4;
  height: 1px;
}

QMenu::icon {
  padding: 0 5px;
}

QMenu::indicator {
  padding: 0 5px;
}

/*
  QToolBar
*/

QToolBar {
  background: #282A36;
  border-top: 1px solid #222;
  border-bottom: 1px solid #222;
}

QToolBar::separator {
  background: #222;
  width: 1px;
}

/*
  QToolButton
*/

QToolButton {
  width: none;
  height: none;
  border: none;
  background: #282A36;
}

QToolButton:hover {
  background: #4D4D4D;
  border: none;
}

QToolButton:pressed {
  background: #222;
  color: #282A36;
  padding: 0;
}

/*
  QLineEdit in QToolBar
*/

QToolBar QLineEdit {
  background: #282A36;
  margin: 0 5px;
}

/*
  QSplitter
*/

QSplitter::handle {
  background: #4D4D4D;
}

QSplitter::handle:horizontal {
  width: 1px;
}

QSplitter::handle:vertical {
  height: 1px;
}

QSplitter::handle:pressed {
  background: #222;
}

/*
  QMainWindow
*/

QMainWindow {
  background: #282A36;
}

/*
  QFrame
*/

QFrame, QLabel {
  outline: none;
  background: #282A36;
  color: #BFBFBF;
}

QLabel:disabled {
  color: #555;
}

/*
  QToolTip
*/

QToolTip {
  padding: 5px;
  background: #282A36;
  border: 2px solid #222;
  color: #BFBFBF;
}

/*
  QTabWidget
*/

QTabWidget::pane {
  margin: 0;
  padding: 0;
}

/*
  QTABBAR
  top
*/

QTabBar::tab:top {
  background: #4D4D4D;
  color: #BFBFBF;
  margin: 0;
  padding: 5px;
}

QTabBar::tab:top:hover {
  background: #282A36;
  color: #4D4D4D;
}

QTabBar::tab:top:selected {
  background: #282A36;
  color: #6272A4;
}

/*
  QListView
*/
QListView {
  background: #282A36;
  color: #BFBFBF;
  border: none;
}

QListView::item {
  padding: 5px;
}

QListView::item:hover {
  background: #282A36;
  color: #4D4D4D;
  padding: 0px;
}

QListView::item:selected:active {
  outline: none;
  background: #282A36;
  color: #6272A4;
  padding: 0px;
}

QListView::item:selected:!active {
  background: #282A36;
  color: #6272A4;
  padding: 0px;
}

/*
  QTableView
*/

QTableView {
  background: #222;
  border: none;
}

QTableView QLabel {
  padding: 0 5px;
}

QTableView QCheckBox {
  padding-left: 5px;
}

/*
  QTreeView
*/

QTreeView {
  background: #282A36;
  color: #BFBFBF;
  border: none;
}

QTreeView::item {
  padding: 5px;
}

QTreeView::item:hover {
  background: #282A36;
  color: #4D4D4D;
  padding: 0px;
}

QTreeView::item:pressed {
  background: #6272A4;
  padding: 0px;
}

QTreeView::item:selected {
  background: #282A36;
  color: #6272A4;
  padding: 0px;
}

QTreeView:disabled {
  color: #555;
}

QAbstractItemView {
  alternate-background-color: #282A36;
}

/*
  QProgrssBar
*/

QProgressBar {
  text-align: center;
  border: 1px solid #282A36;
}

QProgressBar::chunk {
  background: #6272A4;
}

QProgressBar::chunk:disabled {
  background: #6272A4;
}

/*
  QScrollBar / horizontal
*/

QScrollBar:horizontal {
  background: #282A36;
  margin: 0px 5px;
}

QScrollBar::handle:horizontal {
  background: #4D4D4D;
  width: 5px;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal
{
  background: #282A36;
  width: 5px;
  subcontrol-origin: margin;
}

QScrollBar::add-line:horizontal {
  subcontrol-position: right;
}

QScrollBar::sub-line:horizontal {
  subcontrol-position: left;
}

QScrollBar:left-arrow:horizontal,
QScrollBar::right-arrow:horizontal
{
  width: 0px;
  height: 0px;
  background: #BFBFBF;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal
{
  background: none;
}

/*
  QScrollBar / vertical
*/

QScrollBar:vertical {
  background: #282A36;
  margin: 5px 0;
}

QScrollBar::handle:vertical {
  background: #4D4D4D;
  height: 5px;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical
{
  background: #282A36;
  height: 5px;
  subcontrol-origin: margin;
}

QScrollBar::add-line:vertical {
  subcontrol-position: bottom;
}

QScrollBar::sub-line:vertical {
  subcontrol-position: top;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical
{
  background: none;
}

/*
  QPushButton
*/

QPushButton,
QPushButton:enabled
{
  padding: 5px 10px;
  background: #282A36;
  color: #BFBFBF;
}

QPushButton:hover {
  color: #4D4D4D;
}

QPushButton:focus {
  outline: none;
  color: #6272A4;
}

QPushButton:pressed {
  padding: 5px 10px;
  border: none;
  color: #6272A4;
}

QPushButton:disabled {
  color: #4D4D4D;
}

/*
  QLineEdit
*/

QLineEdit,
QLineEdit:read-only
{
  background: #282A36;
  color: #6272A4;
  border: none;
  padding: 4px;
}

QLineEdit:disabled,
QLineEdit:disabled:read-only
{
  color: #4D4D4D;
}

/*
  QHeaderView
*/

QHeaderView::section {
  background: #282A36;
  padding: 0 5px;
  color: #BFBFBF;
}

QHeaderView::section:hover {
  background: #4D4D4D;
}

/*
  QDialog
*/

QDialog {
  background: #282A36;
}

/*
  QCheckbox
*/

QCheckBox:disabled {
  color: #4D4D4D;
}

/*
  QComboBox
*/

QComboBox {
  background: #282A36;
  color: #6272A4;
  padding: 4px;
}

QComboBox:focus {
  background: #282A36;
  color: #6272A4;
}

QComboBox:disabled {
  color: #4D4D4D;
}

QComboBox:on {
  background: #282A36;
  color: #6272A4;
}

QComboBox QAbstractItemView {
  background: #282A36;
  color: #6272A4;
  selection-background-color: #282A36;
  selection-color: #6272A4;
  outline: none;
}

QComboBox::drop-down {
  subcontrol-origin: margin;
  subcontrol-position: top right;
  width: 6ex;
  background: #282A36;
  color: #6272A4;
}

/*
  QSpinBox
*/

QSpinBox {
  background: #282A36;
  color: #6272A4;
  border: none;
  padding: 4px;
}

QSpinBox:disabled {
  color: #4D4D4D;
}

QSpinBox:focus {
  background: #6272A4;
  color: #282A36;
}

/*
  QGroupBox
*/

QGroupBox {
  background: #282A36;
  border: 2px solid #232629;
  padding: 5px;
  margin-top: 15px;
  border-radius: 5px;
}

QGroupBox::title {
  subcontrol-origin: margin;
  subcontrol-position: top left;
  left: 10px;
  padding: 8px 5px 20px 5px;
}

QGroupBox QLabel {
  color: #BFBFBF;
}

QGroupBox QCheckBox {
  color: #BFBFBF;
}

QGroupBox::title:disabled {
  color: #555;
}

TransferListWidget {
  qproperty-downloadingStateForeground: #5AF78E;
  qproperty-forcedDownloadingStateForeground: #5AF78E;
  qproperty-downloadingMetadataStateForeground: #5AF78E;
  qproperty-allocatingStateForeground: #4D4D4D;
  qproperty-stalledDownloadingStateForeground: #F4F99D;
  qproperty-stalledUploadingStateForeground: #F4F99D;
  qproperty-uploadingStateForeground: #CAA9FA;
  qproperty-forcedUploadingStateForeground: #CAA9FA;
  qproperty-pausedDownloadingStateForeground: #FF5555;
  qproperty-pausedUploadingStateForeground: #FF5555;
  qproperty-errorStateForeground: #FF5555;
  qproperty-missingFilesStateForeground: #FF5555;
  qproperty-queuedDownloadingStateForeground: #9AEDFE;
  qproperty-queuedUploadingStateForeground: #9AEDFE;
  qproperty-checkingDownloadingStateForeground: #9AEDFE;
  qproperty-checkingUploadingStateForeground: #9AEDFE;
  qproperty-checkingResumeDataStateForeground: #9AEDFE;
  qproperty-movingStateForeground: #9AEDFE;
  qproperty-unknownStateForeground: #FF5555;
}
